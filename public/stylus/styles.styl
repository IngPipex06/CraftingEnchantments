@media screen and (max-width: 900px) {

  .toggleMenu {
    background-image: url(../imgs/menu.png);
    cursor: pointer;
    position: absolute;
    right: 7.5%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 5vmax 5vmax; /* Ancho y alto de la imagen de fondo */
    height: 5vmax; /* Asegúrate de que el contenedor coincida con el tamaño deseado */
    width: 5vmax;
    transition: background-size 0.346s ease-out;
    -webkit-transition: background-size 0.346s ease-out;
    -moz-transition: background-size 0.346s ease-out;
    -ms-transition: background-size 0.346s ease-out;
    -o-transition: background-size 0.346s ease-out;
  }

  .toggleMenu.active {
    background-image: url(../imgs/salir.png);
    cursor: pointer;
    z-index: 1;
    position: absolute;
    right: 7.5%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 6vmax 6vmax; /* Ancho y alto de la imagen de fondo */
    height: 6vmax; /* Asegúrate de que el contenedor coincida con el tamaño deseado */
    width: 6vmax;

    transition: background-size 0.346s ease-out;
    -webkit-transition: background-size 0.346s ease-out;
    -moz-transition: background-size 0.346s ease-out;
    -ms-transition: background-size 0.346s ease-out;
    -o-transition: background-size 0.346s ease-out;

  }

  .navigation {
    display: flex;
    width: 100vw;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    max-height: 0;
    opacity: 0;
    transform-origin: top;
    transform: scale(1, 0);
    -webkit-transform: scale(1, 0);
    -moz-transform: scale(1, 0);
    -ms-transform: scale(1, 0);
    -o-transform: scale(1, 0);
  }
  header {
    margin-block: 10px 5vh;
    width: 75vw;
  }

  .navigation.active {
    position: fixed;
    inset: 0;
    margin: auto;
    max-height: 100%;
    max-width: 100%
    opacity: 1;
    background-color: #5d493e;
    transform: scale(1, 1);
    -webkit-transform: scale(1, 1);
    -moz-transform: scale(1, 1);
    -ms-transform: scale(1, 1);
    -o-transform: scale(1, 1);
    & a {
      color: #efe3d6;
    }
  }
  nav ul {
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-direction: column;
  }

  img.LogoCE {
    width: 10.535vw;
    border-radius: 3.5px;
  }
  h1.LogoCE {
    font-size: 3.162vw;
  }

  a.Logo.row:hover {

    img.LogoCE {
      width: 12.247vw;
    }
    h1.LogoCE {
      font-size: 3.872vw;
    }

  }


  nav a {
    font-size: 3.141vmax;

    &::after {
      background-color: #352017; 
    }

  }

  .catalogueImg, article {
    border-radius: 5%;
  }

}

@media screen and (max-width: 600px) {

  img.LogoCE {
    width: 13.228vw;
    border-radius: 2px;
  }
  a.Logo.row:hover {
    img.LogoCE {
      width: 14.142vw;
    }
  }

  article {

    width: 23.352vw;
  
    //margin: 3vh 0 2vh;  // top  horizontal  bottom
  
    aspect-ratio: 8.75/13;
  }


  .catalogueImg {
    width: 20.615vw;
  }




}


  

section {
  display: flex;
  height: auto;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-block: 3.141vw;

  &.welcome {
    min-height: 10vh;
    margin-top: 0;
  }

  &.section {
    min-height: 25vh;
  }


}