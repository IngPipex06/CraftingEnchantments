@import url("https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&display=swap");
@import 'partials/functions';
@import 'partials/constants';

*,  
*::after,
*::before {
  box-sizing: border-box;
  font-family: "Caveat", cursive;
  font-optical-sizing: auto;
  font-weight: 400;
  font-style: normal;
  color: #352017;
}

body, html {

  min-height: 100vh;
  min-width: 100vw;
  height: auto;
  width: 100vw;
  
  background: linear-gradient(
    180deg, 
    #e5d9cd 0%,
    #f2e5dc 50%,
    #fbede2 100% 
  );
  background-repeat: no-repeat;
  margin: 0;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

h1 {
  font-size: 3.141vw;
  &.tituloCF {
    margin: 0;
  }
  &.LogoCE {

    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin: 5px;
    font-size: 2vw;
    transition: all 0.346s ease-out;
  }
}
h2 {
  font-size: 2.645751311064591vw;
}
h3 {
  font-size: 2.23606797749979vw;
  margin-block: 0 1vw; 
}
p {
  font-size: 2.236vw;
  margin: 0;
  &.motto {
    font-size:  1.732vw;
    margin-block: - 1% 1.5%;
    color: #876653;
  }
  &.us {

    width: 75%;
    font-size: 2vw;    


  }

  section & {

    width: 75vw;

  } 

  footer & {
    color: #A2876F
  }
}
 

/* Nav bar */

header {
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-around;
  width: 80.622vw;
  margin-block: 35px 2.718vw;
}

a {
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  width: auto;
  margin 0;
  -o-transition: all 0.346s ease-out;
  transition: all 0.346s ease-out;
  -webkit-transition: all 0.346s ease-out;
  -moz-transition: all 0.346s ease-out;
  -ms-transition: all 0.346s ease-out;
  
  &.Logo.row {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 20vw;
    margin-block: 5px;
    max-width: 1000px;
  }

}


a.Logo.row {
  display: flex;
  flex-direction: row;

  &:hover{
    img.LogoCE {
      width: 8.66vw;
    }
    h1.LogoCE {
      font-size: 2.236vw;
      font-weight: bold;
    }
  }
}

img.LogoCE {
  
  width: 8.062vw;
  border-radius: 8.5px;
  margin: 0;
  transition: all 0.346s ease-out;

}


nav {  
  display: flex;
  align-items: center;
  padding: 0px;
  width: 31.415vw;
  max-height: 170px;
}

nav a {
  font-weight: 500;
  font-size: 1.732vw;
  position: relative;

  &:hover {
    font-weight: bold;
  }

}
nav a::after {
  margin: -2.236px;
  display: block;
  content: "";
  width: 0;
  height: 3px;
  background-color: white;
  position: absolute;
  bottom: 0;
  left: 0;

  -ms-border-radius: 5px;
  border-radius: 5px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  -o-transition: 5px;

  -o-transition: 0.346s ease-out;
  transition: 0.346s ease-out;
  -webkit-transition: 0.346s ease-out;
  -moz-transition: 0.346s ease-out;
  -ms-transition: 0.346s ease-out;

}

nav a:hover::after {
  width: 100%;
}


ul {

  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 0;
  padding: 0;
  list-style-type: none;
  flex-grow: 1;
}

/*
--------------------------------------------------------------------

                      ¡¡¡¡¡MAIN!!!!!

--------------------------------------------------------------------
*/


main {
  flex: 1
  display: inline-block;
  width: 90vw;
}

div {
  display: grid;
  justify-content: space-around;
  place-items: center;

  &.articleContainer {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    place-items: center;
    width 100%;

    border-radius: 5%
    //background: rgba(148, 116, 93, 0.1);
  }

}

.articleContainer article:nth-child(2n+1) {
    order: 1; /* Asegura que los artículos estén centrados adecuadamente */
}

.articleContainer article:nth-child(2n) {
    order: 2; /* Asegura que los artículos estén centrados adecuadamente */
}

article {
  display: flex;
  justify-content: center;
  width: 20vw;
  align-items: center;
  text-align: center;
  flex-direction: column;
  margin: 3vh 0 2vh;  // top  horizontal  bottom
  box-sizing: border-box;
  border-radius: 5%;
  background-color: rgba(148, 116, 93, 0.314);
  aspect-ratio: 9/13.5;
}


.catalogueImg {
  width: 18.708vw;
  aspect-ratio: 9/12;
  object-fit: cover;
  border-radius: 5%;
}

footer {
  margin-block: auto 1vh;  
}


